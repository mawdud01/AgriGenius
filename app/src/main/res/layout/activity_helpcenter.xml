<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".helpcenter">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tech Support"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textColor="#0C3657"
        android:layout_margin="15dp"

        ></TextView>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/helplinelogo"


        ></ImageView>


    ></LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
       android:background="@drawable/border"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Name"
                android:textSize="15dp"
                android:textColor="#0C3657"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"

                ></TextView>


            <EditText

                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="text"
                android:layout_margin="10dp"
                android:background="@drawable/sky_reactangle"
                android:id="@+id/victimname"
                android:textColor="#0C3657"
                ></EditText>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="15dp"
                android:textColor="#0C3657"
                android:paddingLeft="10dp"
                ></TextView>


            <EditText
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="text"
                android:layout_margin="10dp"
                android:background="@drawable/sky_reactangle"
                android:id="@+id/victimemail"
                android:textColor="#0C3657"
                ></EditText>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:textSize="15dp"
                android:textColor="#0C3657"
                android:paddingLeft="10dp"
                ></TextView>


            <EditText
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="text"
                android:layout_margin="10dp"
                android:background="@drawable/sky_reactangle"
                android:id="@+id/victimcontact"
                android:textColor="#0C3657"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Problem Description"
                android:textSize="15dp"
                android:textColor="#0C3657"
                android:paddingLeft="10dp"
                ></TextView>


            <EditText
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:inputType="text"
                android:layout_margin="10dp"
                android:background="@drawable/sky_reactangle"
                android:id="@+id/victimdescription"
                android:textColor="#0C3657"
                ></EditText>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/complainsubmitbutoon"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/white_rectangle"
            android:text="Submit"
            android:textSize="18dp"
            android:layout_marginBottom="15dp"
            ></Button>




    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/whatsapp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textColor="#0C3657"
       android:layout_marginTop="25dp"
        android:clickable="true"
        android:onClick="openWhatsApp" />


</LinearLayout>